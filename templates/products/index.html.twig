{% extends 'base.html.twig' %}

{% block title %}Products index
{% endblock %}

{% block body %}


<section class="container my-3 bg-info ">
	<div class="row">
		<div class="col">


			<h1>Products index</h1>

			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Discription</th>
						<th>Price</th>
						<th>Stock</th>
						<th>Created_at</th>
						<th>IsActive</th>
						<th>Poids</th>
						<th>Taille</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for product in products %}
						<tr>
							<td>{{ product.id }}</td>
							<td>{{ product.name }}</td>
							<td>{{ product.discription }}</td>
							<td>{{ product.price }}</td>
							<td>{{ product.stock }}</td>
							<td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ product.isActive ? 'Yes' : 'No' }}</td>
							<td>{{ product.poids }}</td>
							<td>{{ product.taille }}</td>
							<td>
								<a class="btn btn-primary" href="{{ path('app_products_show', {'id': product.id}) }}">show</a>
								<a class="btn btn-primary" href="{{ path('app_products_edit', {'id': product.id}) }}">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="10">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a class="btn btn-primary" href="{{ path('app_products_new') }}">Create new</a>


		</div>

	</section {% endblock %}
