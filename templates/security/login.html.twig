{% extends 'base.html.twig' %}

{% block title %}Connection
{% endblock %}

{% block body %}

	<section class="container my-3 bg-info ">
		<div class="row">
			<div class="col">

			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div
						class="mb-3">       
						{# You are logged in as #}
						Vous êtes connecté(e) comme
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">{#Logout#}Me déconnecter</a>
					</div>
				{% endif %}

				<h1 class="h3 mb-3 font-weight-normal">{#Please sign in#}Me connecter</h1>
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				<label for="inputPassword">{#Password#}Mot de pass</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button
					class="btn btn-lg btn-primary mt-3" type="submit">
					{#Sign in#}
					Me connecter
				</button>
			</form>
		</div>

	</div>

</section>

{% endblock %}
